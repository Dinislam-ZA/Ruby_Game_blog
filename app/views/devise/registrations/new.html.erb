
<div class="container">
  <div class="row m-md-3">
    <div class="bg-white col-lg-12 rounded m-lg-5 p-lg-5 justify-content-center text-center shadow p-3" >
      <% if notice or alert then %>
        <div class="alert alert-primary alert-dismissible fade show col-md-6 offset-md-3 justify-content-center" role="alert">
          <%= notice %><%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <div class="col-md-4 offset-md-4">
        <h2><%= t('global.registration') %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mt-3 mb-3">
            <%= f.label :username, t('deviseh.username') %><br />
            <%= f.text_field :username, autofocus: true%>
          </div>

          <div class="field mt-3 mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email" %>
          </div>

          <div class="field mt-3 mb-3">
            <%= f.label :password, t('deviseh.password') %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t'deviseh.min' %>)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field mt-3 mb-3">
            <%= f.label :password_confirmation, t('deviseh.confirm') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit t('deviseh.reg') %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>




