<div class="container">
  <div class="row m-md-3">
    <div class="bg-white col-lg-12 rounded m-lg-5 p-lg-5 justify-content-center text-center shadow p-3" >
      <% if notice or alert then %>
        <div class="alert alert-primary alert-dismissible fade show col-md-6 offset-md-3 justify-content-center" role="alert">
          <%= notice %><%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <h2><%= t('global.login') %></h2>

      <div class="col-md-4 offset-md-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mt-3 mb-3">
            <%= f.label :login, t('deviseh.log') %><br />
            <%= f.text_field :login, autofocus: true %>
          </div>

          <div class="field mt-3 mb-3">
            <%= f.label :password, t('deviseh.password') %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field custom-control custom-checkbox my-1 mr-sm-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, t('deviseh.remember') %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit t('global.login') %>
          </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

