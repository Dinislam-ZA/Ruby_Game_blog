

  <!-- Post Content Column -->
  <div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4"><%=@post.title %></h1>

    <!-- Author -->
    <p class="lead">
      <%if @user %>
      by
      <a><%=@user.username %></a>
      <%else %>
       <a> Пост был создан в качестве примера</a>
      <%end %>
    </p>

    <hr>

    <!-- Date/Time -->
    <p><%=@post.created_at %></p>

    <hr>


    <hr>

    <!-- Post Content -->
     <%= @post.body %>

    <hr>

    <!-- Comments Form -->
    <%if current_user %>
      <%= react_component("CommentsApp", { comments: @comments, replies: @replies, csrf_token: form_authenticity_token, post_id: @post.id }) %>
    <%else %>
      <h3> <%= t'global.commentsaccess' %></h3>
    <%end %>
  </div>
