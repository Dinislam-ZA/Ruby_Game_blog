<!DOCTYPE html>
<html>
  <head>
    <title>GameBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <style>
        body { background: repeating-linear-gradient(45deg, #EECFBA, #C5DDE8)
        no-repeat; background-size: 100%; min-height:100vh}
    </style>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">GameCourt</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/<%=I18n.locale%>/posts/index"><%= t'global.topic.allposts' %> <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/<%=I18n.locale%>/posts/RPG"><%= t'global.topic.rpg' %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/<%=I18n.locale%>/posts/Sport"><%= t'global.topic.sport' %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/<%=I18n.locale%>/posts/Simulators"><%= t'global.topic.simulatours' %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/<%=I18n.locale%>/posts/Strategy"><%= t'global.topic.strategy' %></a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= t 'global.topic.action' %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/<%=I18n.locale%>/posts/ActionFPS"><%= t 'global.topic.actionfps' %></a>
            <a class="dropdown-item" href="/<%=I18n.locale%>/posts/ActionTPS"><%= t 'global.topic.actiontps' %></a>
          </div>
        </li>
        <%if current_user %>
          <li class="nav-item">
            <a class="nav-link" href="/<%=I18n.locale%>/posts/new"><%= t 'global.createpost' %></a>
          </li>
        <%end %>
        <!--<li class="nav-item">
          <a class="nav-link disabled" href="#">Disabled</a>
        </li>-->
      </ul>
      <span class = "mr-auto"></span>
      <%if current_user %>
        <span class="navbar-text">
          <%=current_user.username%>
        </span>
        <%= link_to t("global.logout") , destroy_user_session_path, method: :delete, class: "nav-link"%>
      <%else %>
        <%= link_to t("global.registration"), new_user_registration_path, class: "nav-link"%>
        <%= link_to t("global.login"), new_user_session_path, class: "nav-link"%>
      <%end %>
      <% if I18n.locale == I18n.default_locale %>
        <%= link_to t("global.translate"), root_url(:locale=>'ru') %>
      <% else %>
        <%= link_to t("global.translate"), root_url(:locale=>'en') %>
      <%end%>
    </div>
  </nav>
  <div class="container-fluid">
  <div class="row">
    <%= yield %>
  <div class="col-md-4">

    <!-- Search Widget -->
    <!--<div class="card my-4">
      <h5 class="card-header">Search</h5>
      <div class="card-body">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-append">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
        </div>
      </div>
    </div>-->

  </div>
  </div>
  </div>

  </body>
</html>
